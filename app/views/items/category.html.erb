<%= render "shared/header" %>
<div class='main'>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h3 class='title'>『<%= @category %>』の商品一覧</h3>
    <ul class='item-lists'>
      <% if @items.exists? %>
        <% @items.each do |item| %>
          <li class='list'>
            <%= link_to item_path(item.id) do %>
              <div class='item-img-content'>
                <div class="item-img-top">
                  <%= image_tag item.image, class: "item-img" if item.image.attached? %>
                </div>
                  <% if item.order %>
                    <div class='sold-out'>
                      <span>Sold Out!!</span>
                    </div>
                  <% end %>
              </div>
              <div class='item-info'>
                <div class='item-name'>
                  <%= item.name %>
                </div>
                <div class='item-price'>
                  <span><%= item.price %>円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'><%= item.favorites.ids.length %></span>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <div class="not-found">
          <%= "このカテゴリーで商品は見つかりませんでした" %>
        </div>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= render "shared/purchase_btn" %>
<%= render "shared/footer" %>